<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <package name="struts-message"  extends="struts-pub" namespace="/message">
		<action name="*_*" method="{1}" class="{2}">
			<!-- 消息页面 -->
			<result name="messageInit">/WEB-INF/views/message/messagemgr/messageInit.jsp</result>
			
			<!-- 发布消息页面 -->
			<result name="publishMessage">/WEB-INF/views/message/messagemgr/publishMessage.jsp</result>
			
			<!-- 消息列表页面 -->
			<result name="myMessage">/WEB-INF/views/message/messagemgr/myMessage.jsp</result>
			
			<!-- 消息详细内容页面 -->
			<result name="messageDetailInfo">/WEB-INF/views/message/messagemgr/messageDetailInfo.jsp</result>			
		    
		</action>
	</package>
</struts>